<%- include("partials/header") %>

<div class="ui main text container segment" id="showCard">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <div class="image">
                <img class="ui left floated rounded large image" src="<%= blog.image %>" >
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <div class="content">
                <span class="ui tiny header"><%= blog.created.toDateString() %></span>
            </div>
            <a class="ui green basic button" href="/blogs/<%= blog._id %>/edit">EDIT</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">DELETE</button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>